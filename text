import traceback

if __name__ == "__main__":
    try:
        # โค้ดเดิมที่คุณเรียกเริ่มโปรแกรม
        from gui_app import start_gui
        start_gui()  # หรืออะไรก็ตามที่ใช้เป็นจุดเริ่ม
    except Exception:
        with open("error_log.txt", "w", encoding="utf-8") as f:
            f.write(traceback.format_exc())
